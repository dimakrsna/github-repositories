{
	"extends": [ "tslint-react" ],
	"rules": {
		"align": [ false, "parameters", "arguments", "statements" ],
		"ban": false,
		"class-name": true,
		"comment-format": [ true, "check-space" ],
		"curly": false,
		"eofline": false,
		"indent": [ true, "spaces", 2 ],
		"interface-name": [ true, "never-prefix" ],
		"jsdoc-format": true,
		"jsx-alignment": false,
		"jsx-boolean-value": false,
		"jsx-curly-spacing": false,
		"jsx-no-lambda": false,
		"jsx-no-multiline-js": false,
		"jsx-wrap-multiline": false,
		"label-position": true,
		"no-any": true,
		"no-arg": true,
		"no-bitwise": true,
		"max-line-length": [false, 120],
		"no-console": [ true, "log", "error", "debug", "info", "time", "timeEnd", "trace" ],
		"no-consecutive-blank-lines": true,
		"no-irregular-whitespace": true,
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-variable": true,
		"no-duplicate-switch-case": true,
		"no-duplicate-imports": [true, {"allow-namespace-imports": true}],
		"no-invalid-template-strings": true,
		"space-within-parens": {
			"type": "number",
			"min": 1
		  },
		"import-spacing": true,
		"no-empty": true,
		"no-eval": true,
		"no-sparse-arrays": true,
		"no-shadowed-variable": true,
		"no-string-literal": true,
		"no-switch-case-fall-through": true,
		"no-trailing-whitespace": false,
		"no-var-keyword": true,
		"one-line": [ true, "check-catch", "check-else", "check-open-brace", "check-whitespace" ],
		"quotemark": [ true, "single", "jsx-double" ],
		"radix": true,
		"semicolon": [ true, "never", "ignore-interfaces" ],
		"switch-default": true,
		"trailing-comma": false,
		"typedef": [ true, "parameter", "property-declaration" ],
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"variable-name": [ false, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case" ],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-module",
			"check-operator",
			"check-separator",
			"check-type",
			"check-typecast"
		]
	}
}
